generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id     String @id @default(uuid())
  matricula String @unique
  name   String
  idade  Int
  professor  Professor? @relation(fields: [professorId], references: [id])
  professorId String?  
  senha String
}

model Professor {
  id       String   @id @default(uuid())
  matricula String @unique
  nome     String   
  idade    Int      
  alunos   Aluno[]
  senha String  
}

model Treino {
  id          String      @id @default(uuid())
  nome        String
  descricao   String?
  data        DateTime
  duracao     Int        
  exercicios  Exercicio[] @relation("TreinoExercicios")
}

model Exercicio {
  id          String      @id @default(uuid())
  nome        String
   treino      Treino?     @relation("TreinoExercicios", fields: [treinoId], references: [id])
  treinoId    String?
}
