generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Aluno {
  id     String @id @default(uuid())
  matricula String @unique
  name   String
  idade  String  
  senha String
}

model Professor {
  id       String   @id @default(uuid())
  matricula String @unique
  nome     String   
  idade    String
  senha String  
}

model Treino {
  id          String      @id @default(uuid())
  nome        String
  descricao   String?
  duracao     String        
}
